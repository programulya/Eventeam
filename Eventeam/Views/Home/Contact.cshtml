@section scripts {
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC92Xbz7wDEoLxEQsMPoStJUVU2RPYPVQw"></script>

    <script>
        function initialize() {
            var canvas = document.getElementById('canvasContactUs');
            var position = new google.maps.LatLng(50.42169, 30.55340);

            var mapOptions = {
                scrollwheel: false,
                center: position,
                zoom: 13,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            }

            var map = new google.maps.Map(canvas, mapOptions);

            var marker = new google.maps.Marker({
                position: position,
                map: map,
                title: 'Eventeam International'
            });
        }

        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
}