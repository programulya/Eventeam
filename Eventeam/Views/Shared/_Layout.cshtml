                        </li> 
                    </ul>             
                </div><!--/.nav-collapse -->
            </div>
        </div> <!-- / .navigation -->
        @RenderBody()
        <hr />
        <!-- Footer -->
        <footer>
            <div class="container">
                <div class="row">
                    <!-- Contact Us -->
                    <div class="col-sm-4">
