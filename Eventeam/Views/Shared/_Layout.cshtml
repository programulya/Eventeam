        <link rel="shortcut icon" href="~/images/ico/favicon.ico">

        <title>Eventeam</title>

        <!-- CSS -->
        <link href="~/fonts/font-awesome/css/font-awesome.min.css" rel="stylesheet">
        @Styles.Render("~/Content/site")

