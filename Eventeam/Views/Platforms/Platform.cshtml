@using Eventeam.Models
@model Eventeam.Models.PlatformViewModel
@{
    ViewBag.Active = "Площадки";
}
<!-- Wrapper -->
<div class="wrapper">

    <!-- Topic Header -->
    <div class="topic">
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <h3>Гостиница</h3>
                </div>
                <div class="col-sm-8">
                    <ol class="breadcrumb pull-right hidden-xs">
                        <li><a href="@Url.Action("Index", "Home")">Главная</a></li>
                        <li><a href="@Url.Action("Platforms", "Platforms")">Площадки</a></li>
                        <li class="active">Гостиница</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container shop-item">
        <div class="row">
            <div class="col-sm-9">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="product-img">
                            <a href="@Url.Content(Model.MainPhoto.Link)" data-lightbox="products">
                                <img src="@Url.Content(Model.MainPhoto.Link)" class="img-responsive main" alt="@Model.MainPhoto.Alt">
                            </a>

                            <div class="row">
                                @foreach (var p in Model.PlatformPhotos)
                                {
                                    <div class="col-xs-4">
                                        <a href="@Url.Content(p.Link)" data-lightbox="products">
                                            <img src="@Url.Content(p.Link)" class="img-responsive" alt="@Url.Content(p.Alt)">
                                        </a>
                                    </div>
                                }
                            </div> <!-- / .row -->

                        </div>
                    </div>
                    <div class="col-sm-6">
                        <h3 class="headline first-child"><span>@Model.Name</span></h3>
                        <ul class="rating list-inline">
                            @for (var i = 0; i < Model.LevelName; ++i)
                            {
                                <li><i class="fa fa-star"></i></li>
                            }
                        </ul>
                        <span class="text-muted reviews"></span>
                        <p class="text-muted">
                            Nunc in neque nec arcu vulputate ullamcorper. Ut id orci ac arcu consectetur fringilla. Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos. Duis hendrerit enim id arcu lacinia, id commodo ante semper. Sed vel ante nec nisi vestibulum congue. Pellentesque non lacus in tortor rutrum tristique.
                        </p>
                        <p class="text-muted">
                            <a href="@Model.Site">@Model.Site</a>
                        </p>
                    </div>
                </div>

                <!-- Item Description -->
                @if (Model.Hotel != null)
                {
                    <div class="row">
                        <div class="col-sm-12">
                            <h3 class="headline"><span>Гостиница</span></h3>
                            <p>
                                <ul>
                                    <li>Категория: @Model.Hotel.CategoryName</li>
                                    <li>Количество комнат: @Model.Hotel.RoomCount</li>
                                    <li>Вместительность: @Model.Hotel.Capacity</li>
                                    <li>Развлечения: @Model.Hotel.Entertainment</li>
                                    <li>Оздоровление: @Model.Hotel.Rehabilitation</li>
                                    <li>Парковка: @Model.Hotel.Parking</li>
                                    <li>Internet: @Model.Hotel.Internet</li>
                                    <li>Дополнительно: @Model.Hotel.Other</li>
                                </ul>
                            </p>
                        </div>
                    </div> <!-- / .row -->

                    if (Model.Hotel.Rooms != null)
                    {
                        <h3 class="headline"><span>Номера</span></h3>

                        foreach (var r in Model.Hotel.Rooms)
                        {
                            <div>
                                <p>@r.Name</p>
                                <ul>
                                    <li>Категория номера: @r.RoomCategoryName</li>
                                    <li>Тип размещения: @r.RoomTypeName</li>
                                    <li>Количество: @r.Quantity</li>
                                </ul>
                            </div>
                        }
                    }
                }

                @if (Model.Restaurants != null)
                {
                     <!-- Item Description -->
                    <div class="row">
                        <div class="col-sm-12">
                            <h3 class="headline"><span>Рестораны</span></h3>
                            @foreach (var r in Model.Restaurants)
                            {
                                <div>
                                    <p>@r.Name</p>
                                    <ul>
                                        <li>Вид ресторана/зала (классификация): @r.ClassificationName</li>
                                        <li>Тип кухни (основная): @r.KitchenName</li>

                                        @if (r.TotalSquare != null)
                                        {
                                            <li>Площадь, м2: @r.TotalSquare</li>
                                        }

                                        @if (r.Seating != null)
                                        {
                                            <li>Посадочных мест: @r.Seating</li>
                                        }

                                        @if (r.Banquet != null)
                                        {
                                            <li>Банкет: @r.Banquet</li>
                                        }

                                        @if (r.Buffet != null)
                                        {
                                            <li>Фуршет: @r.Buffet</li>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>
                    </div> <!-- / .row -->
                }

                @if (Model.Halls != null)
                {
                     <!-- Item Description -->
                    <div class="row">
                        <div class="col-sm-12">
                            <h3 class="headline"><span>Залы</span></h3>
                            @foreach (var h in Model.Halls)
                            {
                                <div>
                                    <p>@h.Name</p>
                                    <ul>
                                        <li>Площадь, м2: @h.TotalSquare</li>
                                        
                                        @if (h.Theater != null)
                                        {
                                            <li>Театр: @h.Theater</li>
                                        }

                                        @if (h.Class != null)
                                        {
                                            <li>Класс: @h.Class</li>
                                        }

                                        @if (h.PPlanting != null)
                                        {
                                            <li>П-посадка: @h.PPlanting</li>
                                        }

                                        @if (h.MeetingRoom != null)
                                        {
                                            <li>Переговоры: @h.MeetingRoom</li>
                                        }

                                        @if (h.Banquet != null)
                                        {
                                            <li>Банкет: @h.Banquet</li>
                                        }

                                        @if (h.Buffet != null)
                                        {
                                            <li>Фуршет: @h.Buffet</li>
                                        }

                                        @if (h.Equipment != null)
                                        {
                                            <li>Оборудование: @h.Equipment</li>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>
                    </div> <!-- / .row -->
                }

                <!-- Item Description -->
                <div class="row">
                    <div class="col-sm-12">
                        <h3 class="headline"><span>Расположение</span></h3>
                        <p>
                            <ul>
                                <li>Город: @Model.CityName</li>
                                <li>Расположение: @Model.LocationName</li>
                                <li>Адрес: @Model.Address</li>
                            </ul>
                        </p>
                    </div>
                </div> <!-- / .row -->
            </div>

            <div class="col-sm-3">
                <!-- Search -->
                <form role="form">
                    <div class="well">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Найти">
                                    <span class="input-group-btn">
                                        <button class="btn btn-theme-primary" type="button"><i class="fa fa-search"></i></button>
                                    </span>
                                </div><!-- /input-group -->
                            </div><!-- /.col-lg-6 -->
                        </div><!-- /.row -->
                    </div>
                </form>
                <!-- Categories -->
                <div class="panel-group" id="help-nav">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <a data-toggle="collapse" data-parent="#help-nav" href="#help-nav-one">
                                Books & CDs
                            </a>
                        </div>
                        <div id="help-nav-one" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <ul>
                                    <li><a href="#">Subcategory (17)</a></li>
                                    <li><a href="#">Subcategory (8)</a></li>
                                    <li><a href="#">Subcategory (10)</a></li>
                                    <li><a href="#">Subcategory (24)</a></li>
                                    <li><a href="#">Subcategory (4)</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <a data-toggle="collapse" data-parent="#help-nav" href="#help-nav-two" class="collapsed">
                                Electronics & Computers
                            </a>
                        </div>
                        <div id="help-nav-two" class="panel-collapse collapse">
                            <div class="panel-body">
                                <ul>
                                    <li><a href="#">Subcategory (17)</a></li>
                                    <li><a href="#">Subcategory (8)</a></li>
                                    <li><a href="#">Subcategory (10)</a></li>
                                    <li><a href="#">Subcategory (24)</a></li>
                                    <li><a href="#">Subcategory (4)</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <a data-toggle="collapse" data-parent="#help-nav" href="#help-nav-three" class="collapsed">
                                Home & Garden
                            </a>
                        </div>
                        <div id="help-nav-three" class="panel-collapse collapse">
                            <div class="panel-body">
                                <ul>
                                    <li><a href="#">Subcategory (17)</a></li>
                                    <li><a href="#">Subcategory (8)</a></li>
                                    <li><a href="#">Subcategory (10)</a></li>
                                    <li><a href="#">Subcategory (24)</a></li>
                                    <li><a href="#">Subcategory (4)</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <a data-toggle="collapse" data-parent="#help-nav" href="#help-nav-four" class="collapsed">
                                Toys & Kids
                            </a>
                        </div>
                        <div id="help-nav-four" class="panel-collapse collapse">
                            <div class="panel-body">
                                <ul>
                                    <li><a href="#">Subcategory (17)</a></li>
                                    <li><a href="#">Subcategory (8)</a></li>
                                    <li><a href="#">Subcategory (10)</a></li>
                                    <li><a href="#">Subcategory (24)</a></li>
                                    <li><a href="#">Subcategory (4)</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <a data-toggle="collapse" data-parent="#help-nav" href="#help-nav-five" class="collapsed">
                                Clothing & Shoes
                            </a>
                        </div>
                        <div id="help-nav-five" class="panel-collapse collapse">
                            <div class="panel-body">
                                <ul>
                                    <li><a href="#">Subcategory (17)</a></li>
                                    <li><a href="#">Subcategory (8)</a></li>
                                    <li><a href="#">Subcategory (10)</a></li>
                                    <li><a href="#">Subcategory (24)</a></li>
                                    <li><a href="#">Subcategory (4)</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- / .row -->
        <div>
            <!-- Google Map -->
            <div id="canvasHotel" style="width: 100%; height: 400px;"></div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->

</div> <!-- / .wrapper -->

@section scripts {
    <script type="text/javascript" src="http://maps.google.com/maps/api/js"></script>

    <script>
        function initialize() {
            var canvas = document.getElementById('canvasHotel');
            var position = new google.maps.LatLng(@Model.Geography.Latitude, @Model.Geography.Longitude);

            var mapOptions = {
                scrollwheel: false,
                center: position,
                zoom: 10,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            }

            var map = new google.maps.Map(canvas, mapOptions);

            var marker = new google.maps.Marker({
                position: position,
                map: map,
                title: '@Model.Address'
            });
        }

        google.maps.event.addDomListener(window, 'load', initialize);
</script>
}
